

<form class='form-horizontal'>

<div class="form-group">
  <label class='col-lg-2 control-label'>Code</label>
  <div class="col-lg-4">
    <pre><%= @code.code %></pre>
  </div>
</div>

<div class="form-group">
  <label class='col-lg-2 control-label'>Password</label>
  <div class="col-lg-4">
    <pre><%= @code.password %></pre>
  </div>
</div>


  <%if !@code.username.blank? %>
      <div class="form-group">
        <label class='col-lg-2 control-label'>Username</label>
        <div class="col-lg-4">
          <pre><%= @code.username %></pre>
        </div>
      </div>
  <%end%>


  <div class="form-group">
    <div class='col-lg-2'></div>
    <div class="col-lg-4">
    <%= link_to 'Edit', edit_code_path(@code), :class => 'btn btn-default' %>
    <%= link_to 'Back', codes_path, :class => 'btn btn-default' %>
    </div>
  </div>
</form>