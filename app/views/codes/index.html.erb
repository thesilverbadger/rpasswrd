
<fieldset>
  <legend>Listing codes</legend>

<table class='table table-striped table-bordered'>
  <thead>
  <tr>
    <th>Code</th>
    <th></th>
  </tr>
  </thead>
    <tbody>
        <% @codes.each do |code| %>
            <tr>
                <td><%= code.code %></td>
                <td>
                  <div class="visible-xs">
                    <div class="btn-group">
                      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        Action <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to 'Show', code %></li>
                        <li><%= link_to 'Edit', edit_code_path(code) %></li>
                        <li class="divider"></li>
                        <li><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                      </ul>
                    </div>
                  </div>
                  <div class="hidden-xs">
                    <%= link_to 'Show', code, :class => 'btn btn-default' %>
                    <%= link_to 'Edit', edit_code_path(code), :class=>'btn btn-default' %>
                    <%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger' %>
                  </div>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<br />
</fieldset>